<?xml version="1.0" encoding="UTF-8"?>
<form>
    <field 
        name="id"
        type="hidden"
        label="COM_JOOMNEWS_ITEM_ID"
    />
    <field
        name="name"
        type="text"
        label="COM_JOOMNEWS_FEED_NAME"
        description="COM_JOOMNEWS_FEED_NAME_DESCRIPTION"
        required="true"
    />
    <field
        name="slug"
        type="text"
        label="COM_JOOMNEWS_FEED_SLUG"
        description="COM_JOOMNEWS_FEED_SLUG_DESCRIPTION"
        required="true"
    />
    <field
        name="url"
        type="text"
        label="COM_JOOMNEWS_FEED_URL"
        description="COM_JOOMNEWS_FEED_URL_DESCRIPTION"
        required="true"
    />
    <field
    name="thumbnail"
    type="accessiblemedia"
    label="COM_JOOMNEWS_FEED_THUMBNAIL"
    description="COM_JOOMNEWS_FEED_THUMBNAIL_DESCRIPTION"
    required="true"
    />
    <field
        name="owner"
        type="text"
        label="COM_JOOMNEWS_FEED_OWNER"
        description="COM_JOOMNEWS_FEED_OWNER_DESCRIPTION"
        required="false"
    />
    <field
        name="last_updated"
        type="calendar"
        label="COM_JOOMNEWS_FEED_DATE"
        description="COM_JOOMNEWS_FEED_DATE_DESCRIPTION"
        showtime="false"
        required="true"
    />
    <field
        name="catid"
        type="category"
        extension="com_joomnews"
        label="COM_JOOMNEWS_FORM_CATEGORY_LABEL"
        description="COM_JOOMNEWS_FEED_CATEGORY_DESCRIPTION"
        required="true"
    >
    <option value="">JOPTION_SELECT_CATEGORY</option>
    </field>
    <field
        name="comment"
        type="textarea"
        rows="5"
        cols="30"
        label="COM_JOOMNEWS_FEED_COMMENT"
        description="COM_JOOMNEWS_FEED_COMMENT_DESCRIPTION"
        required="false"
    />
    <field
        name="language"
        type="language"
        default="en-GB"
        label="COM_JOOMNEWS_FEED_LANGUAGE"
        description="COM_JOOMNEWS_FEED_LANGUAGE_DESCRIPTION"
        required="true"
    />
</form>